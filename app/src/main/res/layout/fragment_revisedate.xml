<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/AC_Aboutus_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/selector_groupview"
            android:text="Back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="资料修改"
            android:textSize="30sp" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/FM_Revisedate_Picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="#123"/>

            <TextView
                android:id="@+id/FM_Revisedate_UsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FM_Revisedate_Picture"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="账号:"/>
            <TextView
                android:id="@+id/FM_Revisedate_Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/FM_Revisedate_UsernameText"
                android:layout_below="@id/FM_Revisedate_Picture"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="123"/>

            <TextView
                android:id="@+id/FM_Revisedate_PasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FM_Revisedate_UsernameText"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="密码:"/>
            <TextView
                android:id="@+id/FM_Revisedate_UpdatePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/FM_Revisedate_PasswordText"
                android:layout_below="@id/FM_Revisedate_UsernameText"
                android:textColor="@android:color/holo_blue_light"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="修改密码"/>

            <TextView
                android:id="@+id/FM_Revisedate_NicknameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FM_Revisedate_PasswordText"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="昵称:"/>

            <EditText
                android:id="@+id/FM_Revisedate_Nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/FM_Revisedate_NicknameText"
                android:layout_alignBottom="@+id/FM_Revisedate_NicknameText"
                android:layout_toEndOf="@+id/FM_Revisedate_PasswordText"
                android:padding="5dp"
                android:textSize="20sp"
                android:hint="请输入昵称"
                />

            <Button
                android:id="@+id/FM_Revisedate_Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FM_Revisedate_NicknameText"
                android:background="@drawable/shape_button_usable"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="修 改 完 成"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
