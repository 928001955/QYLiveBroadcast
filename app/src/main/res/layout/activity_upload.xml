<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/AC_Upload_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/selector_groupview"
            android:text="Back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上传"
            android:textSize="30sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/AC_Upload_ShootUpload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_groupview"/>

        <TextView
            android:layout_width="0.1dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_blue_light"/>

        <com.edu.gdqy.Tool.ImageTextGroupView
            android:id="@+id/AC_Upload_LocalUpload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_groupview"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/AC_Upload_Preview"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/AC_Upload_VedioName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="视频名" />

    <Button
        android:id="@+id/AC_Upload_UploadBtn"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/shape_button_usable"
        android:text="确认上传" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
</LinearLayout>
