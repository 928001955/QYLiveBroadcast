<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Item_Heraldlist_LiveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="520131"/>

        <TextView
            android:id="@+id/Item_Heraldlist_AnchorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Item_Heraldlist_LiveName"
            android:text="520131"/>

        <TextView
            android:id="@+id/Item_Heraldlist_StartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="9.30 7:00开始"/>

        <TextView
            android:id="@+id/Item_Heraldlist_Subscriberstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Item_Heraldlist_StartTime"
            android:text="点击条目订阅"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>